@model User;

@{
    Layout = "_LayoutAccount";
}

<form asp-action="SignUp" method="post" class="login100-form validate-form p-l-55 p-r-55 p-t-178">
    <span class="login100-form-title">
        Sign Up
    </span>
    <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter username">
        <input class="input100" type="text" asp-for="Name" placeholder="Full Name">
        <span class="focus-input100"></span>
    </div>

    <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter email">
        <input class="input100" type="email" asp-for="Email" placeholder="Email Address">
        <span class="focus-input100"></span>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter username">
        <input class="input100" type="text" asp-for="Username" placeholder="Username">
        <span class="focus-input100"></span>
    </div>

    <div class="wrap-input100 validate-input" data-validate="Please enter password">
        <input class="input100" type="password" asp-for="Password" placeholder="Password">
        <span class="focus-input100"></span>
    </div>

    <div class="text-right p-t-13 p-b-23">
    </div>

    <div class="container-login100-form-btn">
        <button type="submit" class="login100-form-btn">
            Sign Up
        </button>
    </div>

    <div class="flex-col-c p-t-170 p-b-40">
        <span class="txt1 p-b-9">
            You have an account?
        </span>
        <a asp-action="SignIn" class="txt3">
            Sign In
        </a>
    </div>
</form>