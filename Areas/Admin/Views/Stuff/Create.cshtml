@model Stuff

@{ 
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Tambah Data Barang</h1>
    <p class="mb-4">

    </p>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Add Data</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="POST">
                <div class="mb-3">
                    <label asp-for="Gambar" for="formFile" class="form-label">File Image</label>
                    <input class="form-control" type="file" name="Gambar" accept=".jpg,.png" id="formFileMultiple" multiple>
                </div>
                <div class="form-group">
                    <label asp-for="NamaBarang">Nama Barang</label>
                    <input type="text" asp-for="NamaBarang" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="Stok">Stok</label>
                    <input type="text" asp-for="Stok" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="Harga">Harga</label>
                    <input type="text" asp-for="Harga" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label asp-for="Deskripsi" class="form-label">Deskripsi</label>
                    <textarea class="form-control" asp-for="Deskripsi" id="exampleFormControlTextarea1" rows="3"></textarea>
                    <span asp-validation-for="Deskripsi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-info">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>